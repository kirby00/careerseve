<h1> Edit Profile </h1>

<h3> <%= @user.firstname %> <%= @user.lastname %> </h3>

<div>
 	<%= form_for(@user) do |f| %>
		<%= f.label :email %>
		<%= f.text_field :email %> <br><br>

		<%= f.label :firstname %>
		<%= f.text_field :firstname %> <br><br>

		<%= f.label :lastname %>
		<%= f.text_field :lastname %> <br><br>		

		<%= f.label :field %>
		<%= f.text_field :field %> <br><br>		

	  <%= f.submit "Update Profile" %> <br><br>
	<% end %>
</div>