<h1> List of Students </h1>

<h3> Total students: <%= @students_count %> </h3>

<ul> <% @students.each do |s| %>
	<li> <a href= <%= "/students/#{s.id}" %> > <%= s.firstname %> <%= s.lastname %> </a> </li> <br>
	<% end %>
</ul>

<div>
 	<%= form_for(:student) do |f| %>
		<%= f.label :email %>
		<%= f.text_field :email %> <br><br>

		<%= f.label :firstname %>
		<%= f.text_field :firstname %> <br><br>

		<%= f.label :lastname %>
		<%= f.text_field :lastname %> <br><br>		

		<%= f.label :field %>
		<%= f.text_field :field %> <br><br>		

	  <%= f.submit "Create Student" %> <br><br>
	<% end %>
</div>

<div> <a href= / > Home </a> </div>